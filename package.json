  "bugs": {
    "url": "https://github.com/EcrituresNumeriques/stylo/issues"
  },
  "homepage": "https://github.com/EcrituresNumeriques/stylo#readme",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3"
  },
  "volta": {
    "node": "18.12.1"
  }
}
