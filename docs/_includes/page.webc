<!doctype html>
<html webc:root
      webc:keep
      :lang="lang"
>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title @raw="title"></title>
  </head>
  <body>
    <slot name="header">
      <header></header>
    </slot>

    <main>
      <h1 @html="title"></h1>
      <div class="content" @html="content" webc:nokeep></div>

      <!-- default slot -->
      <slot></slot>
    </main>

    <slot
      webc:if="useSideMenu"
      name="sideMenu"
    >
      <side-menu></side-menu>
    </slot>

    <slot name="footer">
      <footer></footer>
    </slot>
  </body>
</html>

<style>
  :host body {
    color: blue;
  }
</style>
